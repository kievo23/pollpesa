                        result: '',
                        rstimage: '',
                        userId: ''
                    },
                    computed: {
                        totalAmount : function(){
                            var amount = 0;
                            for (var i = this.candidates.length - 1; i >= 0; i--) {
                                amount += parseFloat(this.candidates[i].odd);
                            }
                            return parseInt(amount * this.price);
                        }
